{
  "cli": {
    "version": ">= 0.38.0"
  },
  "build": {
    "production": {
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r25b",
        "buildType": "apk"
      },
      "ios": {
        "image": "latest",
        "simulator": true
      }
    },
    "preview": {
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r25b",
        "distribution": "internal"
      },
      "ios": {
        "image": "latest",
        "distribution": "internal"
      }
    },
    "development": {
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r25b",
        "developmentClient": true,
        "distribution": "internal"
      },
      "ios": {
        "image": "latest",
        "developmentClient": true,
        "distribution": "internal"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./path/to/your/service-account-file.json",
        "track": "production",
        "releaseStatus": "completed"
      },
      "ios": {
        "appleId": "your-apple-id",
        "ascAppId": "your-app-store-connect-app-id"
      }
    }
  }
}
